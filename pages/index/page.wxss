.header {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #368dea
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo .avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 10rpx 0 20rpx;
  border-radius: 50%;
}

.userinfo .nickname {
  color: #fff;
  font-size: 25rpx;
}

.entrance {
  margin: 50rpx 0;
  padding: 20rpx 50rpx;
  color: #368dea;
  font-size: 30rpx;
  background: #f7f7f7;
  border-radius: 5rpx;
}

.welcome {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.welcome .title {
  margin: 80rpx 0 10rpx;
  color: #888;
  font-size: 25rpx;
}

.welcome .qrcode {
  width: 500rpx;
  height: 500rpx;
  margin: 10rpx;
}